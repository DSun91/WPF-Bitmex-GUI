<Window x:Class="BitmexGUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
        xmlns:viewmodels="clr-namespace:BitmexGUI.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1050">
    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBox">
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="Gray"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="1"/>
                <Setter Property="FontFamily" Value="Book Antiqua"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="DemiBold"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5"
                                    Padding="{TemplateBinding Padding}">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="1,0,-1,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"  />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"  />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Content="Bitmex Trading GUI" Grid.Row="0" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Height="49" Margin="174,20,0,0" VerticalAlignment="Top" Width="317" FontFamily="Franklin Gothic Book" FontSize="36" FontWeight="Bold" Cursor="AppStarting" FontStyle="Italic"/>

        <Canvas x:Name="DrawingCanvas" Grid.Row="1" Background="AliceBlue" Width="619" HorizontalAlignment="Left" Margin="40,10,0,0" Height="415" VerticalAlignment="Top" >
        </Canvas>
        <Label Content="Entry price: " Grid.Row="3" VerticalContentAlignment="Top" HorizontalAlignment="Left" Height="39" Margin="73,27,0,0" VerticalAlignment="Top" Width="130" FontFamily="Sitka Heading" FontSize="18" RenderTransformOrigin="1.026,0.54" FontWeight="Bold">
        </Label>
        <TextBox x:Name="Entryprice" Grid.Row="3" HorizontalAlignment="Left" Height="25" Margin="182,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="132" FontFamily="Book Antiqua" FontSize="14"  />
        <Label Content="Leverage:" Grid.Row="4" VerticalContentAlignment="Top" HorizontalAlignment="Left" Height="40" Margin="92,10,0,0" VerticalAlignment="Top" Width="130" FontFamily="Sitka Heading" FontSize="18" RenderTransformOrigin="1.026,0.54" FontWeight="Bold" />
        <Slider x:Name="SliderLeverage" TickFrequency="5"  SmallChange="1" Minimum="1" Maximum="100" Value="{Binding SliderLeverage, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  TickPlacement="Both" HorizontalAlignment="Left" Grid.Row="4" Height="28" Margin="182,0,0,0" VerticalAlignment="Center" Width="190"  />

        <Slider x:Name="AmountSlider" TickFrequency="5" HorizontalAlignment="Left" Grid.Row="3" Height="20" Margin="469,41,0,0" VerticalAlignment="Top" Width="353" ValueChanged="AmountSlider_ValueChanged"  />
        <Label Content="Balance entry amount:" Grid.Row="3" VerticalContentAlignment="Top" HorizontalAlignment="Left" Height="34" Margin="489,9,0,0" VerticalAlignment="Top" Width="193" FontFamily="Sitka Heading" FontSize="18" RenderTransformOrigin="1.026,0.54" FontWeight="Bold"/>
        <Label x:Name="BalancePercent" Content="%" HorizontalAlignment="Left" Height="24" Margin="822,37,0,0" Grid.Row="3" VerticalAlignment="Top" Width="112" FontWeight="Bold"/>
        <TextBox x:Name="EntryAmount"  Text="{Binding EntryAmount, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Row="3" HorizontalAlignment="Left" Height="26" Margin="677,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="108" FontFamily="Book Antiqua" FontSize="14" />
        <Label Content="Balance" VerticalContentAlignment="Top" HorizontalAlignment="Left" Height="32" Margin="709,4,0,0" VerticalAlignment="Top" Width="73" FontFamily="Sitka Heading" FontSize="18" RenderTransformOrigin="1.026,0.54" FontWeight="Bold" Grid.Row="1"/>
        <TextBox x:Name="CurrentBalance"  HorizontalAlignment="Left" Height="25" Margin="791,7,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="108" FontFamily="Book Antiqua" FontSize="14" Grid.Row="1"  />
        <ComboBox x:Name="CmbCurrency" HorizontalAlignment="Left" SelectedIndex="0" Height="25" Margin="907,7,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1">
            <ComboBoxItem Content="USDT"/>
            <ComboBoxItem Content="BTC"/>
            <ComboBoxItem Content="BNB"/>
        </ComboBox>
        <Label Content="Liquidation Price: " Grid.Row="1" VerticalContentAlignment="Top" HorizontalAlignment="Left" Height="39" Margin="677,50,0,0" VerticalAlignment="Top" Width="158" FontFamily="Sitka Heading" FontSize="18" RenderTransformOrigin="1.026,0.54" FontWeight="Bold"/>
        <Label Content="" Grid.Row="1" BorderBrush="OrangeRed" BorderThickness="2" VerticalContentAlignment="Top" HorizontalAlignment="Left" Height="30" Margin="840,50,0,0" VerticalAlignment="Top" Width="119" FontFamily="Sitka Heading" FontSize="18" RenderTransformOrigin="1.026,0.54" FontWeight="Bold"/>
        <Label Content="Entry Fee: " Grid.Row="1" VerticalContentAlignment="Top" HorizontalAlignment="Left" Height="39" Margin="736,110,0,0" VerticalAlignment="Top" Width="92" FontFamily="Sitka Heading" FontSize="18" RenderTransformOrigin="1.026,0.54" FontWeight="Bold"/>
        <Label Content="" Grid.Row="1" BorderBrush="OrangeRed" BorderThickness="2" VerticalContentAlignment="Top" HorizontalAlignment="Left" Height="30" Margin="840,110,0,0" VerticalAlignment="Top" Width="119" FontFamily="Sitka Heading" FontSize="18" RenderTransformOrigin="1.026,0.54" FontWeight="Bold"/>
        <Menu HorizontalAlignment="Left" Grid.Row="0" Height="25"  Margin="0,0,0,0" VerticalAlignment="Top" Width="1000">
            <MenuItem Header="File" Width="81" HorizontalContentAlignment="Right" VerticalContentAlignment="Center">
                <MenuItem Header="New"/>
                <MenuItem Header="Open"/>
                <MenuItem Header="Save"/>
                <Separator/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Edit" Width="106" HorizontalAlignment="Center" VerticalAlignment="Center">
                <MenuItem Header="Undo"/>
                <MenuItem Header="Redo"/>
                <Separator/>
                <MenuItem Header="Cut"/>
                <MenuItem Header="Copy"/>
                <MenuItem Header="Paste"/>
            </MenuItem>
            <MenuItem Header="Help" Width="134" HorizontalAlignment="Center" VerticalAlignment="Center">
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>

        <Button Content="Buy Limit" Grid.Row="5" HorizontalAlignment="Left" Height="30" Margin="287,0,0,0" VerticalAlignment="Center" Width="95"/>
        <Button Content="Sell Limit" Grid.Row="5" HorizontalAlignment="Left" Height="30" Margin="387,0,0,0" VerticalAlignment="Center" Width="94"/>
        <Button Content="Buy Market" Grid.Row="7" HorizontalAlignment="Left" Height="30" Margin="287,0,0,0" VerticalAlignment="Center" Width="95"/>
        <Button Content="Sell Market" Grid.Row="7" HorizontalAlignment="Left" Height="30" Margin="387,0,0,0" VerticalAlignment="Center" Width="94"/>
        <Label x:Name="LeverageMultiplier" Content="{Binding SliderLeverage,StringFormat='Value: X{{0:0.00}}'}" HorizontalAlignment="Left" Height="28" Margin="387,0,0,0" Grid.Row="4" VerticalAlignment="Center" Width="67" FontWeight="Bold"/>
        <Label Content="Position value: " Grid.Row="4" VerticalContentAlignment="Top" HorizontalAlignment="Left" Height="39" Margin="489,8,0,0" VerticalAlignment="Top" Width="146" FontFamily="Sitka Heading" FontSize="18" RenderTransformOrigin="1.026,0.54" FontWeight="Bold"/>
        <TextBox x:Name="PositionValue" IsEnabled="False" Text="{Binding PositionValue ,Mode=OneWay}" Grid.Row="4" HorizontalAlignment="Left" Height="25" Margin="614,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" FontFamily="Book Antiqua" FontSize="14" />
        <Label x:Name="LeverageMultiplier_Copy" Content="X" HorizontalAlignment="Left" Height="28" Margin="372,0,0,0" Grid.Row="4" VerticalAlignment="Center" Width="18" FontWeight="Bold"/>
        <!-- You can add more controls here to display other data or add user interactions -->
    </Grid>
</Window>