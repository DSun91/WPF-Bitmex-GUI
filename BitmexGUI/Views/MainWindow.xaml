<Window x:Class="BitmexGUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
        xmlns:viewmodels="clr-namespace:BitmexGUI.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1000"> 
    <Grid>
        <ListView ItemsSource="{Binding PriceData}" 
                  Height="300" 
                  VerticalAlignment="Top">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Symbol" DisplayMemberBinding="{Binding Symbol}" Width="100"/>
                    <GridViewColumn Header="Open" DisplayMemberBinding="{Binding Open}" Width="100"/>
                    <GridViewColumn Header="High" DisplayMemberBinding="{Binding High}" Width="100"/>
                    <GridViewColumn Header="Low" DisplayMemberBinding="{Binding Low}" Width="100"/>
                    <GridViewColumn Header="Close" DisplayMemberBinding="{Binding Close}" Width="100"/>
                    <GridViewColumn Header="Timestamp" DisplayMemberBinding="{Binding Timestamp}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- You can add more controls here to display other data or add user interactions -->
    </Grid>
</Window>